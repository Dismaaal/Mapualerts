<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.AddAnnouncementsPage"
             BackgroundColor="White">
  <StackLayout Orientation="Vertical">
  <Label Text="Add Announcement" HorizontalOptions="Center" FontSize="20" TextColor="Black"/>
  <Entry x:Name ="subject" Placeholder="Subject" PlaceholderColor="Gray" TextColor="Black" />
  <Label Text="Message:" TextColor="Black"/>
  <Editor x:Name ="message" VerticalOptions="FillAndExpand" HorizontalOptions="Fill" TextColor="Black" />
  <Button x:Name="btnAdd" Text ="Add" Clicked="btnAdd_Clicked"/>
  </StackLayout>
</ContentPage>